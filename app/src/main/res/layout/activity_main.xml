<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.elektrasoft.disablestatusbar.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_startLockTaskMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START LOCK"/>
    <Button
        android:id="@+id/btn_getLockTaskMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET LOCK"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_stopLockTaskMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOP LOCK"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="119dp" />

    <Button
        android:id="@+id/btn_launchCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LAUNCH CALC"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="187dp" />
    <Button
        android:id="@+id/btn_2ndAcitvity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="187dp" />

</LinearLayout>
